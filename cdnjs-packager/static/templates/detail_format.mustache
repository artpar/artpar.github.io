<div class="row-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <select title="version">
                    {{#pack.versions}}
                    <option value="{{value}}">{{value}}
                    {{/pack.versions}}
                </select>
            </div>
            <div class="col-md-3">
                <div class="checkbox checkbox-slider--default  checkbox-slider--c-weight">
                    <label>
                        <input type="checkbox" class="show-non-minified"><span> Show dev build</span>
                    </label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="checkbox checkbox-slider--default  checkbox-slider--c-weight">
                    <label>
                        <input type="checkbox" class="show-all"><span> Show all files</span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row">
            <table class="file-table table " style="text-align: right">
                <tbody>
                {{#pack.fileSplit}}
                    <tr class="{{info.extension}} {{info.minified}} {{info.mapFile}}">
                        {{#parts}}
                            <td>
                                {{.}}
                            </td>
                        {{/parts}}
                        <td>{{info.extension}}</td>
                        <td>{{info.minified}}</td>
                        <td style="display: none">
                            <input type="checkbox" value="{{file}}">
                        </td>
                    </tr>
                {{/pack.fileSplit}}
                </tbody>
            </table>
        </div>
    </div>
</div>